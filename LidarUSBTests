import serial
connected = False
ser = serial.Serial()
ser.port = '/dev/ttyUSB0'
ser.baudrate = 115200
ser.parity = serial.PARITY_NONE
ser.stopbits = serial.STOPBITS_ONE
ser.bytesize = serial.EIGHTBITS
print(ser)
ser.open()
ser.write(b'T')

def handle_data(data):
    print(data)

def read_from_port(ser):
    while not connected:
        connected = True
        while True:
           print("test")
           reading = ser.readline().decode()
           handle_data(reading)
           
ser.close()
